{
  "name": "garden",
  "displayName": "Garden",
  "description": "This extension provides the user with a personalized garden.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onWebviewPanel:garden",
    "onView:explorer",
    "onView:gardenView",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "garden.gardenView",
          "name": "Garden",
          "icon": "src/assets/icons/gardenIcon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "garden.water",
        "title": "Garden: Water",
        "icon": {
          "light": "src/assets/icons/light/watering-can-light.svg",
          "dark": "src/assets/icons/dark/watering-can-dark.svg"
        }
      },
      {
        "command": "garden.refresh",
        "title": "Garden: Refresh",
        "icon": {
          "light": "src/assets/icons/light/refresh.svg",
          "dark": "src/assets/icons/dark/refresh.svg"
        }
      },
      {
        "command": "garden.edit",
        "title": "Garden: Edit"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "garden.water",
          "group": "navigation",
          "when": "view == garden.gardenView"
        },
        {
          "command": "garden.refresh",
          "group": "navigation",
          "when": "view == garden.gardenView"
        }
      ]
    },
    "configuration": {
      "title": "Garden",
      "properties": {
        "garden.plants": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "monstera",
              "pothos",
              "ivy",
              "fern"
            ]
          },
          "default": [
            "monstera",
            "pothos",
            "ivy",
            "fern"
          ],
          "scope": "window",
          "description": "The plants for the garden"
        },
        "garden.shouldNotify": {
          "type": "boolean",
          "default": true,
          "description": "Should the extension notify you when the plants need water?"
        },
        "garden.waterNotificationTime": {
          "type": "integer",
          "default": 30,
          "description": "Time between water notifications (Minutes) (This is ignored if notifications are disabled)"
        },
        "garden.waterAmount": {
          "type": "integer",
          "default": 100,
          "description": "Amount to water plants"
        },
        "garden.background": {
          "type": "string",
          "enum": [
            "outside"
          ],
          "default": "outside",
          "description": "Background for Garden"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
